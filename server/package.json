{
  "name": "bomberman-server",
  "version": "1.0.0",
  "description": "Multiplayer server for Bomberman.js",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "ts-node-dev --respawn src/main.ts",
    "lint": "eslint src",
    "docker:build": "docker build -t bomberman-server .",
    "docker:run": "docker run -p 3000:3000 --env-file .env bomberman-server",
    "docker:stop": "docker stop $(docker ps -q --filter ancestor=bomberman-server)"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/platform-socket.io": "^10.3.0",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/websockets": "^10.3.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "helmet": "^8.1.0",
    "nestjs-pino": "^3.5.0",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "sanitize-html": "^2.17.0",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/sanitize-html": "^2.16.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
